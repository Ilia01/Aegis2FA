# Docker Compose Environment Variables
# Copy this file to .env and update with your values
# NOTE: For local development, use docker-compose.dev.yml which has self-contained values

# PostgreSQL Database
POSTGRES_PASSWORD=changeme_to_strong_password

# Redis Configuration
# Local dev: Use docker-compose.dev.yml (includes local Redis container)
# Production: Use Upstash or external Redis service
REDIS_HOST=your-upstash-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_upstash_password
REDIS_TLS_ENABLED=true

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_ACCESS_SECRET=your_jwt_access_secret_here_64_characters_minimum
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_64_characters_minimum
TEMP_TOKEN_SECRET=your_temp_token_secret_here_64_characters_minimum
DEVICE_TOKEN_SECRET=your_device_token_secret_here_64_characters_minimum

# CORS Origins (comma-separated URLs that can access the API)
# For production, add your frontend URL here
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# API URL for Frontend (required for production builds)
# Local dev: http://localhost:3001/api
# Production: https://your-backend.railway.app/api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Public API URL (optional, for production backend logs)
# Example: https://your-backend.railway.app/api
PUBLIC_API_URL=""

# Optional: Twilio (for SMS verification)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional: Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@2fa-service.com
